<UserControl x:Class="restarauntV2._0.View.Import"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:btn="clr-namespace:restarauntV2._0.Utilites"
             xmlns:local="clr-namespace:restarauntV2._0.View"
             mc:Ignorable="d" 
              Height="450" Width="450" Background="#fff">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <ComboBox Name="tablesName" Style="{StaticResource ComboBox}" Height="50" 
                      Tag="Выберите таблицу для импортирования"
                      Width="280"/>

            <Button Width="280" Height="45" Style="{StaticResource btnStyle}" Margin="0 10" Content="Выбрать файл"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Style="{StaticResource textblock}" FontSize="12" Text="Выбранный файл: "/>
                <TextBlock Style="{StaticResource textblock}" FontSize="12" Opacity="0.7" Text="user.csv"/>
            </StackPanel>
            <Button Width="280" Height="45" Style="{StaticResource btnStyle}" Margin="0 10" Content="Импортировать"/>
           

        </StackPanel>
    </Grid>
</UserControl>
